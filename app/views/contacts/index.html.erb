<div class="contacts">
  <h2 class="contacts__title">Contacts</h2>

  <div class="contacts__list">
    <% if @contacts.present? %>
      <% @contacts.each do |contact| %>
        <a class="contacts__contact" href="<%= contact_path(contact.id) %>">
          <h3 class="contacts__email"><%= contact.email %></h3>

          <span class="contacts__event_count"><%= pluralize(contact.events.count, 'event') %></span>
        </a>
      <% end %>
    <% else %>
      <div class="contacts__empty">
        <p>No contacts yet.</p>
      </div>
    <% end %>
  </div>
</div>
